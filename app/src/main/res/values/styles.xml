<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBarAppCompat</item>
        <item name="actionBarStyle">@style/MyActionBarAppCompat</item>
    </style>

    <style name="MyActionBarAppCompat" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/babyblue</item>
        <item name="background">@color/babyblue</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:divider">#FFF</item>
    </style>


    <!-- Base application theme. -->
    <style name="MyHoloTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyHoloActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_space_between_icon_and_title</item>
    </style>

    <style name="MyHoloActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyHoloActionBarTitle</item>
        <item name="android:background">@color/babyblue</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="MyHoloActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>


</resources>
